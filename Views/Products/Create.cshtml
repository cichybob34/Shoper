@model Shoper.Models.Product

@{
    ViewData["Title"] = "Stwórz";
    var listsData = (IEnumerable<ShoppingList>)ViewData["lists"];
}

<h1>Stwórz</h1>

<h4>Produkty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ShoppingList" class="control-label">Lista zakupów</label>
                <select asp-for="ShoppingList"
                        asp-items="@(new SelectList(listsData, nameof(ShoppingList.Id), nameof(ShoppingList.Name)))"
                        class="form-control">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="ShoppingList" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Ilość</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Cena</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPurchased" /> Kupiono
                </label>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Stwórz" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a class="btn btn-secondary" asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
