@model Shoper.Models.Product

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń artykuł</h1>

<h3>Czy na pewno chcesz usunąć ten artykuł</h3>
<div>
    <h4>Produkty</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Ilość
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            Cena
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price) zł
        </dd>
        <dt class = "col-sm-2">
            Kupiono
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsPurchased)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> <br /><br />
        <a class="btn btn-secondary btn-sm" asp-action="Index">Wróć do listy</a>
    </form>
</div>
