@model Shoper.Models.ShoppingList

@{
    ViewData["Title"] = "Dodaj listę";
}

<h1>Dodaj</h1>

<h4>Lista zakupów</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Szczegóły</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-secondary btn-sm" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a class="btn btn-secondary btn-sm" asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
